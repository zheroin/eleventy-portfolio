<footer class="footer" role="contentinfo">
    <div class="footer__inner container">

        <p class="footer__item">
            <strong>&copy; {{ build.timestamp | year }}</strong><br />
            <a class="h-card" rel="me" href="{{ site.url }}">{{ author.name }}</a>
        </p>

        <p class="footer__item">
            <strong>Contact</strong><br />
            <a href="mailto:{{ author.email | obfuscate | safe }}" title="Contact Email">
                {{ author.email | obfuscate | safe }}
            </a>
        </p>

        <p class="footer__item">
            <strong>Social</strong><br />
            <a href="{{ author.social.twitter.name }}" title="Twitter" rel="me">Twitter</a> /
            <a href="{{ author.social.github.name }}" title="Github" rel="me">Github</a>
        </p>

        <p class="footer__item">
            <strong>Legal</strong><br />
            <a href="/privacy/">Privacy Policy</a> /
            <a href="/imprint/">Imprint</a>
        </p>

        <p class="footer__item footer__item--right">
            <a href="{{ site.repo }}" class="footer__icon" title="View Source Code">{% icon "github" %}</a>
            <a href="{{ "/feed.xml" | url }}" class="footer__icon" title="Atom Feed">{% icon "feed" %}</a>
        </p>

    </div>
</footer>