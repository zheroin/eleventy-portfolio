---
layout: base
---
<article 
    id="{{ title | slug }}" 
    class="post h-entry" 
    role="article" 
    itemscope 
    itemtype="http://schema.org/BlogPosting" 
    aria-labelledby="{{ title | slug }}-title" 
>
    <header class="post__header">
        <h1 id="{{ title | slug }}-title" class="post__title p-name title" itemprop="headline">{{ title }}</h1>
        <div class="post__meta">

            <time class="post__date dt-published" itemprop="datePublished" datetime="{{ page.date | isoDate }}">{{ page.date | readableDate }}</time>

            {% if category %}
            &sdot; <span class="post__category p-category">{{ category | capitalize }}</span>
            {% endif %}

            {% if demo %}
            <a href="{{ demo }}" class="btn btn--primary post__demo" target="_blank" rel="noopener noreferrer">
                ViewDemo
            </a>
            {% endif %}

        </div>
    </header>

    <div class="post__content e-content markdown" itemprop="articleBody">
        {{ content | safe }}
    </div>

    <div class="post__footer">
        <div hidden>
            <a class="u-url" href="{{ url }}">{{ title }}</a>
            <p class="h-card p-author">
                <a class="p-name u-url" rel="author" href="{{ site.url }}">{{ author.name }}</a>
                <img class="u-photo" src="{{ "/assets/images/max_boeck.jpg" | url }}" />
            </p>
        </div>

        <p class="post__footer__info">
            Published in [ {{ category }} ] &sdot; {{ page.date | readableDate }}
        </p>

        <a
            href="https://twitter.com/intent/follow?screen_name=mxbck"
            target="_blank"
            rel="noopener noreferrer"
            title="Follow {{ author.name }} on Twitter"
            class="btn btn--twitter"
        >
            {% icon "twitter" %} Follow @{{ author.social.twitter.name }}
        </a>
    </div>
</article>

<section class="postsection" id="webmentions">
    <h3 class="postsection__title">Webmentions</h3>
    {% include 'webmentions.njk' %}
</section>

<section class="postsection">
    <h3 class="postsection__title">Other things I've written</h3>
    {% include 'otherposts.njk' %}
</section>