---
layout: base
---
<article 
    id="{{ title | slug }}" 
    class="post h-entry" 
    role="article" 
    itemscope 
    itemtype="http://schema.org/BlogPosting" 
    aria-labelledby="{{ title | slug }}-title" 
>
    <header class="post__header container">
        <h1 id="{{ title | slug }}-title" class="post__title p-name title" itemprop="headline">{{ title }}</h1>
        <div class="post__meta">

            <time class="post__date dt-published" itemprop="datePublished" datetime="{{ date | isoDate }}">{{ date }}</time>

            {# {% if page.category %}
            &sdot; <span class="post__category p-category">{{ page.category | capitalize }}</span>
            {% endif %} #}

            {% if demo %}
            <a href="{{ demo }}" class="btn btn--primary post__demo" target="_blank" rel="noopener noreferrer">
                ViewDemo
            </a>
            {% endif %}

        </div>
    </header>

    <div class="post__content e-content content" itemprop="articleBody">
        {{ content | safe }}
    </div>

    <div class="post__footer container">

        <div class="post__reldata" hidden>
            <a class="u-url" href="{{ url }}">{{ title }}</a>
            <p class="h-card p-author">
                <a class="p-name u-url" rel="author" href="{{ site.url }}">{{ author.name }}</a>
                <img class="u-photo" src="{{ "/assets/images/max_boeck.jpg"|url }}" />
            </p>
        </div>

        <p>
            <small>Published in [{{ tags }}] &sdot; {{ date }}</small>
        </p>

        <a href="https://twitter.com/intent/follow?screen_name=mxbck" target="_blank" rel="noopener noreferrer" title="Follow Max BÃ¶ck on Twitter"
            class="btn btn--twitter">
            {% icon "twitter" %} Follow @{{ author.social.twitter.name }}
        </a>
    </div>
</article>

