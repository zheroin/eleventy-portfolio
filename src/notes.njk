---
layout: base
tags: nav
title: Notes
navtitle: Notes
navorder: 3
pagination:
  data: collections.notes
  size: 20
  alias: notes
---
<div class="page page--notes">
    <header class="page__header">
        <h1 class="page__title">{{ title }}</h1>
    </header>
    <div class="page__content">

        {% if notes | length %}
            <ol reversed class="notelist">
            {% for note in notes %}
                <li class="notelist__item">
                    {% include 'note.njk' %}
                </li>
            {% endfor %}
            </ol>

            {% if pagination.nextPageHref %}
                <a href="{{ pagination.nextPageHref }}" hidden>next page</a>
            {% endif %}

        {% else %}
            <p class="lead">No Notes yet.</p>
        {% endif %}

    </div>
</div>
